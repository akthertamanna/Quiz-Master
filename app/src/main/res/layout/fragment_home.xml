<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.HomeFragment">


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swifeHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView

            android:scrollbars="none"
            android:paddingBottom="55dp"
            android:id="@+id/nestedScrollView_home_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:paddingTop="10dp"
                android:paddingHorizontal="20dp"
                android:paddingBottom="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtMostPopular"
                    android:text="Most Popular"
                    android:layout_marginBottom="10dp"
                    android:textSize="@dimen/commonTitle"
                    android:textStyle="bold"
                    android:textColor="@color/purple_700"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>



                <com.google.android.material.card.MaterialCardView

                    android:id="@+id/collapsing_home_category_main_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <RelativeLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <com.daimajia.slider.library.SliderLayout
                            android:visibility="visible"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_of_slider_in_home"
                            android:background="@color/white"
                            android:id="@+id/imageSliderCategory"/>




                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>
                <TextView
                    android:visibility="gone"
                    android:text="No data found"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:id="@+id/nodata_home_main_slider_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/txtViewAllPopular"
                    android:id="@+id/txtCategoryTitle"
                    android:text="Category"
                    android:textColor="@color/purple_700"
                    android:textSize="@dimen/commonTitle"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:layout_marginBottom="10dp"

                    android:id="@+id/collapsing_home_category_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView_home_category"
                        app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:visibility="gone"
                        android:text="No data found"
                        android:id="@+id/nodata_home_main_cat_fragment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />


                </com.google.android.material.appbar.CollapsingToolbarLayout>

                <TextView
                    android:textAlignment="viewEnd"
                    android:gravity="end"
                    android:textColor="@color/main_blue_color"
                    android:id="@+id/txtViewAllCatory"
                    android:text="View All Categories"
                    android:textSize="@dimen/view_all_cat"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>






</RelativeLayout>