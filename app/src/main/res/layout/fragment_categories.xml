<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".fragment.CategoriesFragment">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swife_category"
        android:layout_marginBottom="0dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:paddingTop="20dp"
            android:paddingBottom="50dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_gravity="start"
                android:text="Pick Category"
                android:layout_marginHorizontal="15dp"
                android:textColor="@color/purple_700"
                android:textStyle="bold"
                android:textSize="@dimen/commonTitle"
                android:textAlignment="textStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="15dp"
                android:id="@+id/categoryTotal"
                android:textColor="@color/purple_700"
                android:textStyle="normal"
                android:textSize="@dimen/subCommonTitle"
                android:text="Up to 100 Categories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



            <RelativeLayout
                android:id="@+id/mainSubCategory"
                android:layout_marginBottom="0dp"
                android:layout_below="@+id/categoryTotal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="@dimen/categoryMain"
                    android:layout_marginBottom="0dp"
                    android:id="@+id/recycler_category"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:visibility="gone"
                    android:layout_centerInParent="true"
                    android:text="No data found"
                    android:id="@+id/nodata_category"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
        </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</RelativeLayout>